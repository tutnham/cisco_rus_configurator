modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "libiconv", "libxcrypt", "openssl", "pkg-config", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Cisco Translator App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "cisco_translator_app"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test GUI"

[[workflows.workflow]]
name = "Cisco Translator App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install paramiko cryptography pyserial && python main.py"

[[workflows.workflow]]
name = "cisco_translator_app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -q paramiko cryptography pyserial && python main.py"

[[workflows.workflow]]
name = "Test GUI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_gui.py"
